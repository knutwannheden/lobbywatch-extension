{
    "name": "Lobbywatch Extension",
    "description": "Highlights name of parliamentarians and lobbyists on page",
    "version": "1.5",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab", "scripting", "webNavigation"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Toggle highlighting",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/lobbywatch16.png",
            "32": "/images/lobbywatch32.png",
            "48": "/images/lobbywatch48.png",
            "64": "/images/lobbywatch64.png",
            "128": "/images/lobbywatch128.png"
        }
    },
    "commands": {
        "show-next": {
            "suggested_key": {
                "default": "Ctrl+Shift+Down",
                "mac": "Command+Shift+Down"
            },
            "description": "Scroll to the next parliamentarian / lobbyist"
        },
        "show-previous": {
            "suggested_key": {
                "default": "Ctrl+Shift+Up",
                "mac": "Command+Shift+Up"
            },
            "description": "Scroll to the previous parliamentarian / lobbyist"
        }
    },
    "icons": {
        "16": "/images/lobbywatch16.png",
        "32": "/images/lobbywatch32.png",
        "48": "/images/lobbywatch48.png",
        "64": "/images/lobbywatch64.png",
        "128": "/images/lobbywatch128.png"
    }
}